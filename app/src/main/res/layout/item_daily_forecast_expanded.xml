<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="@dimen/daily_expanded_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_tiny_plus"
        android:drawablePadding="@dimen/margin_tiny_plus"
        android:text="@string/current_wind_speed_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small_plus"
        app:drawableTopCompat="@drawable/ic_wind_24dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_humidity"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_wind_deg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_wind_deg_stub"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small_plus"
        app:drawableLeftCompat="@drawable/ic_arrow_rotate"
        app:layout_constraintEnd_toEndOf="@+id/tv_wind"
        app:layout_constraintStart_toStartOf="@id/tv_wind"
        app:layout_constraintTop_toBottomOf="@id/tv_wind"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="@dimen/daily_expanded_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny_plus"
        android:drawablePadding="@dimen/margin_tiny_plus"
        android:text="@string/current_humidity_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small_plus"
        app:drawableTopCompat="@drawable/ic_humidity_24dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_pressure"
        app:layout_constraintStart_toEndOf="@+id/tv_wind"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="@dimen/daily_expanded_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny_plus"
        android:drawablePadding="@dimen/margin_tiny_plus"
        android:text="@string/current_pressure_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small_plus"
        app:drawableTopCompat="@drawable/ic_pressure_24dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_uvi"
        app:layout_constraintStart_toEndOf="@+id/tv_humidity"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tv_uvi"
        android:layout_width="@dimen/daily_expanded_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny_plus"
        android:layout_marginEnd="@dimen/margin_medium"
        android:drawablePadding="@dimen/margin_tiny_plus"
        android:text="@string/current_uvi_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small_plus"
        app:drawableTopCompat="@drawable/ic_uvi_1_2_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_pressure"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>