<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/tab_inner_size"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dow_short"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_inner_size"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="@dimen/tab_inner_size"
        android:text="@string/dow_short_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_inner_size"
        android:gravity="center"
        android:text="@string/date_short_stub"
        android:textAlignment="center"
        android:textColor="@drawable/tab_text" />
</LinearLayout>