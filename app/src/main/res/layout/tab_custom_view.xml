<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="32dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dow_short"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_size"
        android:gravity="center"
        android:text="@string/daily_forecast_dow_short_stub"
        android:textAlignment="center"
        android:textColor="@color/text_color_semitransparent"
        android:textSize="@dimen/font_small"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_size"
        android:gravity="center"
        android:text="@string/current_temp_stub"
        android:textAlignment="center"
        android:textColor="@drawable/tab_text"
        tools:textColor="@color/text_color" />
</LinearLayout>