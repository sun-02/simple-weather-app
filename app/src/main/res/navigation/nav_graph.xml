<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/currentWeatherFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.simpleweatherapp.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <argument
            android:name="location"
            app:argType="com.example.simpleweatherapp.model.bingmaps.Location" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.simpleweatherapp.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_mapFragment2"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/currentWeatherFragment"
        android:name="com.example.simpleweatherapp.ui.weather.WeatherFragment"
        android:label="fragment_current_weather"
        tools:layout="@layout/fragment_weather" >
        <argument
            android:name="newShortLocation"
            app:argType="com.example.simpleweatherapp.model.bingmaps.ShortLocation" />
    </fragment>
</navigation>